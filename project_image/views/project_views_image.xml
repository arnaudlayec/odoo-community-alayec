<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form.image</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />

        <field name="arch" type="xml">
            <page name="description" position="inside">
                <group col="12">
                    <group colspan="10" name="description_left" />
                    <group colspan="2" name="description_right">
                        <field name="image_1920" widget="image" nolabel="1" options="{'size': [192, 192]}" />
                    </group>
                </group>
            </page>

            <group name="description_left" position="inside">
                <field name="description" position="move" />
            </group>
            <field name="description" position="attributes">
                <attribute name="colspan">2</attribute>
            </field>
        </field>
    </record>
</odoo>
