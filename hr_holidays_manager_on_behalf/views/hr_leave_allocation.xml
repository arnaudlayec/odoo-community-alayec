<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="hr_leave_allocation_view_form_manager" model="ir.ui.view">
        <field name="name">hr.leave.allocation.view.form.manager</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
        
        <field name="arch" type="xml">

            <!-- Display `Employee(s)` field(s) without needing group
                `group_hr_holidays_user` (Officer : manage all requests)
            -->
            <xpath expr="(//field[@name='employee_id'])[2]" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_holidays_responsible</attribute>
            </xpath>
            <field name="employee_ids" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_holidays_responsible</attribute>
            </field>
            
            <!-- For domain -->
            <form position="inside">
                <field name="employee_ids_domain" invisible="1" />
            </form>
            
        </field>
    </record>

</odoo>
