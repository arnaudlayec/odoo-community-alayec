<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action to open project's workorders -->
    <record id="action_open_work_order_project" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
    </record>

    <!-- Project Form: add Smart-Button to WorkOrders -->
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form.mrp_link</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />

        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button id="workorder"
                    type="action"
                    name="%(action_open_work_order_project)d"
                    class="oe_stat_button"
                    icon="fa-industry"
                    attrs="{'invisible': [('manufacturing_order_count', '=', 0)]}"
                >
                    <field name="manufacturing_order_count" widget="statinfo" />
                </button>
            </div>
        </field>
    </record>

</odoo>
